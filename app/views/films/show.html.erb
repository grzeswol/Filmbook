<p id="notice"><%= notice %></p>


<table>
  <tr>
    <th rowspan="3"><%= image_tag(@film.image) %></th>
		<th>
			<strong>Name:</strong>
			<%= @film.name %>
		</th>
		<th>
		<strong>Year:</strong>
		<%= @film.year %>
	  </th>
  </tr>
	<tr>
		<td colspan="2">
		<strong>Content:</strong>
		<%= @film.content %>
  	</td>
  </tr>
  <tr>
		<td colspan="2">
		<strong>Genre:</strong>
		<%= @film.genre %>
	  </td>
  </tr>
</table>


<p>
  <strong>Director:</strong>
  <%= @film.director %>
</p>

<p>
  <strong>Actors:</strong>
  <%= @film.actors %>
</p>


<h2>Comments</h2>
<%= render @film.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>
<br />

<%= link_to 'Edit', edit_film_path(@film) %> |
<%= link_to 'Back', films_path %>
