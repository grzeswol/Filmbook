
<table>
  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= link_to image_tag(film.image, class: 'list_image'), film %></td>
        <td class="list_content"><%= truncate(strip_tags(film.content), length: 280) %></td>
				<td class="list_actions">
					<%= link_to 'Show', film %><br/>
          <%= link_to 'Edit', edit_film_path(film) %><br/>
					<%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
			<tr>
        <td class="list_name"><%= film.name %></td>
			</tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Film', new_film_path %>
